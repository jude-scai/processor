# ============================================================================
# AURA Processing Engine - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Database Connection Type (choose one)
# ----------------------------------------------------------------------------
DATABASE_CONNECTION=postgresql  # Options: postgresql | bigquery

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
APP_NAME=aura-processing-engine
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# PostgreSQL Configuration (when DATABASE_CONNECTION=postgresql)
# ----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aura_underwriting
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=aura_password
DATABASE_URL=postgresql://aura_user:aura_password@localhost:5432/aura_underwriting

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ----------------------------------------------------------------------------
# BigQuery Configuration (when DATABASE_CONNECTION=bigquery)
# ----------------------------------------------------------------------------
BIGQUERY_PROJECT=aura-project
BIGQUERY_DATASET=underwriting_data
BIGQUERY_EMULATOR_HOST=localhost:9050
BIGQUERY_LOCATION=US

# ----------------------------------------------------------------------------
# Google Cloud Storage Configuration (Document Storage)
# ----------------------------------------------------------------------------
STORAGE_EMULATOR_HOST=http://localhost:4443
GCS_PROJECT_ID=aura-project
GCS_BUCKET_NAME=aura-documents
GCS_BUCKET_LOCATION=US

# ----------------------------------------------------------------------------
# Google Cloud Pub/Sub Configuration (Event Messaging)
# ----------------------------------------------------------------------------
PUBSUB_EMULATOR_HOST=localhost:8085
PUBSUB_PROJECT=aura-project
PUBSUB_TOPIC=test-topic
PUBSUB_SUBSCRIPTION=test-subscription

# ----------------------------------------------------------------------------
# Redis Configuration (Caching Layer)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis cache TTL (in seconds)
REDIS_TTL_FACTOR_CACHE=3600
REDIS_TTL_PROCESSOR_CACHE=1800
REDIS_TTL_SESSION_CACHE=86400

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ----------------------------------------------------------------------------
# Processing Engine Settings
# ----------------------------------------------------------------------------
MAX_PARALLEL_PROCESSORS=5
PROCESSOR_TIMEOUT_SECONDS=300
PROCESSOR_MAX_RETRIES=3

# ----------------------------------------------------------------------------
# External API Integrations
# ----------------------------------------------------------------------------
# Thomson Reuters CLEAR
CLEAR_API_KEY=your-clear-api-key
CLEAR_API_URL=https://api.thomsonreuters.com/clear/v1

# Experian Business
EXPERIAN_CLIENT_ID=your-experian-client-id
EXPERIAN_CLIENT_SECRET=your-experian-client-secret
EXPERIAN_API_URL=https://api.experian.com/business

# Equifax Business
EQUIFAX_API_KEY=your-equifax-api-key
EQUIFAX_API_URL=https://api.equifax.com/business

# ----------------------------------------------------------------------------
# Testing Configuration
# ----------------------------------------------------------------------------
TEST_DATABASE_URL=postgresql://aura_user:aura_password@localhost:5432/aura_underwriting_test
TEST_REDIS_DB=1
TEST_GCS_BUCKET=aura-documents-test
